<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(session_path) do %>

      <%= label_tag :email %>
      <%= email_field_tag :email, nil, autofocus: true, class: 'form-control' %>

      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control' %>

      <%= label_tag :remember_me, class: "checkbox inline" do %>
        <%=check_box_tag :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <br/>
      <br/>

      <%= submit_tag "Sign in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>